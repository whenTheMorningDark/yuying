{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsxImportSource": "vue",
    "sourceMap": false,
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "yuying-ui": ["."]
    },
    "lib": ["esnext", "dom"]
  },
  "include": [
    "components",
    "index.ts",
    "types.d.ts"
  ],
  "exclude": ["node_modules"]
}
